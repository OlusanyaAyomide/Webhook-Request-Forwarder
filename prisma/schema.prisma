// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id               String       @id @default(cuid())
  name             String
  slug             String
  suffix           String
  pathSegment      String       @unique
  forwarderBaseUrl String
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  requestLogs      RequestLog[]

  isLive    Boolean  @default(false)
  User      User     @relation(fields: [userId], references: [id])
  userId    String
  LiveUrl   LiveUrl? @relation(fields: [liveUrlId], references: [id])
  liveUrlId String?
}

model RequestLog {
  id              String   @id @default(cuid())
  project         Project  @relation(fields: [projectId], references: [id])
  projectId       String
  method          String
  incomingPath    String
  fullIncomingUrl String
  forwardedUrl    String
  requestHeaders  Json
  query           String
  requestBody     Json?
  responseStatus  Int
  responseHeaders Json
  responseBody    Json?
  durationMs      Int
  error           String?
  createdAt       DateTime @default(now())
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  first_name        String
  last_name         String
  signed_up_at      DateTime  @default(now())
  last_signed_in_at DateTime?
  projects          Project[]
}

model LiveUrl {
  id         String    @id @default(cuid())
  url        String
  created_at DateTime  @default(now())
  projects   Project[]
}
